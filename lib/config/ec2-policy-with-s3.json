{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ec2:TerminateInstances",
                "ec2:CreateImage"
            ],
            "Resource": "*"
        },{
            "Effect": "Allow",
            "Action": [
                "s3:Get*",
                "s3:List*"
            ],
            "Resource": [
                "arn:aws:s3:::%BUCKET_NAME%",
                "arn:aws:s3:::%BUCKET_NAME%/*"
            ]
        }
    ]
}
